  id                 Int    @id @default(autoincrement())
  family_id          Int
  name               String
  deadPersonProfiles String

  profile DeadPersonProfile @relation(fields: [deadPersonProfiles], references: [slug])

  family Family @relation(fields: [family_id], references: [family_id])
